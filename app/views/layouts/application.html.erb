<!DOCTYPE html>
<html>
    <head>
      <title>PomoproOnRails</title>
      <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
      <%= stylesheet_link_tag    'application', '//fonts.googleapis.com/icon?family=Material+Icons' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
      <%= csrf_meta_tags %>
    </head>
    <body>

      <% flash.each do |name, msg| %>
          <script>
            var $toastContent = $('<%= content_tag(:div, msg, class: "info #{name}" ) %>');
            Materialize.toast($toastContent, 5000);
          </script>
      <% end %>

      <%= yield %>


      <%= yield :js %>
    </body>
</html>
