<h1>Timer</h1>

<% if @timers %>
  <ul class="list-pomo">
    <% @timers.each do |pomo| %>
      <li><%= pomo.status %></li>
    <% end %>
  </ul>
<% end %>

<%= button_to "Pomodoro", user_timers_path(:user_id => current_user.id, :status => "pomo"), method: :create %>

<%= link_to "Sair", destroy_user_session_path, method: :delete %>